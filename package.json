{
  "name": "coverflow-game-launcher",
  "version": "1.0.0",
  "description": "CoverFlow-style game launcher with 3D interface",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "keywords": [
    "games",
    "launcher",
    "coverflow",
    "3d"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@electron/rebuild": "^3.6.0"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2"
  },
  "build": {
    "appId": "com.coverflow.gamelauncher",
    "productName": "CoverFlow Game Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "style.css",
      "coverflow.js",
      "ui-components.js",
      "ui-components.css",
      "SimplexNoise.js",
      "albums-example.json",
      "placeholder.png",
      "icon.png",
      "icon_512.png",
      "modules/**/*.js",
      "!modules/**/*.md",
      "libs/**/*",
      "gameinfodownload-main/**/*",
      "!gameinfodownload-main/__pycache__",
      "!gameinfodownload-main/**/__pycache__",
      "!gameinfodownload-main/*.pyc"
    ],
    "extraResources": [
      {
        "from": "gameinfodownload-main",
        "to": "gameinfodownload-main"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon.png",
      "category": "Game"
    }
  }
}
